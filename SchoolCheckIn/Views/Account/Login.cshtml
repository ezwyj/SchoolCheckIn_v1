@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>登录</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/common.css?v=@UtilHelper.StaticVersion">
    <link rel="stylesheet" href="~/assets/css/login.css?v=@UtilHelper.StaticVersion">
</head>
<body>
    <div class="bg-box">
        <img src="~/assets/img/login_bg.jpg" alt="背景图">
    </div>
    <div class="login-box">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>系统登录</h3>
            </div>
            <div class="panel-body">
                @if (!String.IsNullOrEmpty(ViewBag.errorMsg))
                {
                    <div class="alert alert-danger">
                        @ViewBag.errorMsg
                    </div>
                }
                <form action="~/Account/LoginAction" method="POST">
                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                    <div class="form-group">
                        <input type="text" name="username" class="form-control user" value="@ViewBag.username" placeholder="用户名" autofocus />
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control pwd" placeholder="密码" />
                    </div>
                    <button type="submit" class="btn btn-success btn-block">登录</button>
                </form>
            </div>
        </div>
    </div>
    <div id="footer">
        <p class="text-center">&copy; 2017 - @DateTime.Now.Year </p>
    </div>
</body>
</html>